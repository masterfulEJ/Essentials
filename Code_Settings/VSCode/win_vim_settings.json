{
    // "files.autoSave": "afterDelay",
    // "files.autoSaveDelay": 1000,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.ipynb_checkpoints": true,
        "**/.vscode": true,
        "**/.ropeproject": true,
    },

    "window.menuBarVisibility": "toggle",

    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.minimap.enabled": false,
    "editor.fontSize": 15,
    "window.zoomLevel": -1,
    "editor.rulers": [80],
    "editor.codeLens": false,
    "editor.formatOnPaste": true,
    "editor.parameterHints": true,
    "editor.renderIndentGuides": true,
    "editor.renderWhitespace": "boundary",

    "git.enableSmartCommit": true,
    "explorer.openEditors.visible": 0,
    "explorer.confirmDelete": false,

    "[python]":{
        "editor.wordWrap": "on",
        "editor.wordWrapColumn": 100,
        "editor.tabSize": 4,
    },
    "[json]": {
        "editor.minimap.enabled": true,
        "editor.minimap.maxColumn": 40,
    },
    "[html]": {
        "editor.wordWrap": "on",
        "editor.wordWrapColumn": 100,
        "editor.tabSize": 2,
        "editor.minimap.enabled": true,
        "editor.minimap.maxColumn": 40,
    },

    "workbench.startupEditor": "none",
    "workbench.editor.showTabs": true,
    "workbench.activityBar.visible": true,
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.statusBar.visible": true,
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        "statusBar.background": "#03396c",
        "statusBar.noFolderBackground": "#03396c",
        "statusBar.debuggingBackground": "#03396c"
    },
    "window.restoreWindows": "none",
    "terminal.integrated.windowsEnableConpty": true,

    "vim.useSystemClipboard": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors": {
        "normal": ["#8FBCBB", "#434C5E"],
        "insert": "#BF616A",
        "visual": "#03396c",
        "visualline": "#03396c",
        "visualblock": "03396c",
        "replace": "#D08770"
    },
    "vim.ignorecase": false,
    "vim.hlsearch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before":["q"],
            "commands": [":nohl"]
        },
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before":["enter"],
            "after": ["o", "<Esc>"]
        }
    ],
    "vim.handleKeys": {
        "<C-f>": false,
        "<C-sh-h>": false,
    },
    "terminal.integrated.cursorBlinking": true,
    // "terminal.integrated.shell.windows": "C:\\OpenSource\\Git\\bin\\bash.exe",
    "terminal.integrated.shell.windows": "cmd.exe",
    "terminal.integrated.shellArgs.windows": [
        "/k", "C:\\cmder\\vendor\\init.bat"
    ],

    "explorer.confirmDragAndDrop": false,
    // R.exe path for windows
    "r.rterm.windows": "C:\\R\\R-3.3.3\\bin\\x64\\R.exe",
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "workbench.colorTheme": "Monokai++",
    "extensions.ignoreRecommendations": true,
    "python.pythonPath": "C:\\Users\\KIC\\Anaconda3\\python.exe",
    "python.testing.useExperimentalDebugger": false,
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pylintCategorySeverity.convention": "Hint",
    "python.linting.pylintCategorySeverity.warning": "Error",
    "python.linting.flake8Enabled": true,
    "python.jediEnabled": true,
    "python.analysis.watchSearchPaths": false,
    "liveServer.settings.donotShowInfoMsg": true,
}